<Window x:Class="GourmetGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GourmetGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btOk" Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="75" Height="37" Click="btOk_Click"/>
        <Label x:Name="lbPense" Content="Pense em um prato que gosta" HorizontalAlignment="Center" Margin="10,32,0,0" VerticalAlignment="Top" Width="172"/>

    </Grid>
</Window>
